WidgetsExample:


<WidgetsExample>:
    rows: 3

    Label:
        text: root.button_change_text
        color: 1, 0.5, 0.9, 0.6
        background_color: 0.4, 0.8, 1, 0.6
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
        font_size: "30dp"
        bold: True
        outline_color: (0,0,1)
        outline_width: 10
    Button:
        size_hint: 1, 0.5
        text: root.button_change_text
        font_size: "30dp"
        on_press: root.on_button_click()
        color: 1, 0.5, 0.9, 0.6
        background_color: 0.5, 0.8, 0.9, 1

    ToggleButton:
        size_hint: 1, 0.3
        text: root.ToggleButton_change_text
        on_state: root.on_togglebutton_click(self)
        color: 1, 1, 0.9, 0.6
        background_color: 0.2, 1, 0.9, 1